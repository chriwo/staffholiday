{
	"name": "chriwo/staffholiday",
	"type": "typo3-cms-extension",
	"license": "GPL-3.0",
	"description": "TYPO3 extension for the planning of holidays for employees",
	"keywords": [
		"TYPO3",
		"extension",
		"holiday",
		"vacation",
		"staff",
		"plan"
	],
	"homepage": "http://www.chriwo.de/",
	"authors": [
		{
			"name": "Christian Wolfram",
			"role": "Project Manager",
			"homepage": "http://www.chriwo.de"
		}
	],
	"require": {
		"typo3/cms-core": "^8.7.0 || ^9.5",
		"typo3/cms-felogin": "^8.7.0 || ^9.5"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.0",
		"nimut/testing-framework": "^4"
	},
	"autoload": {
		"psr-4": {
			"ChriWo\\Staffholiday\\": "Classes"
		}
	},
	"replace": {
		"staffholiday": "self.version",
		"typo3-ter/staffholiday": "self.version"
	},
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"scripts": {
		"post-autoload-dump": [
			"mkdir -p .Build/Web/typo3conf/ext/",
			"[ -L .Build/Web/typo3conf/ext/staffholiday ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/staffholiday"
		]
	},
	"extra": {
		"branch-alias": {
      		"dev-master": "2.x-dev"
    	},
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/Web"
		}
	}
}
